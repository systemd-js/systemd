{
  "name": "@systemd/root",
  "version": "1.0.0",
  "engines": {
    "node": "^20.0.0"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "build": "tsc --build",
